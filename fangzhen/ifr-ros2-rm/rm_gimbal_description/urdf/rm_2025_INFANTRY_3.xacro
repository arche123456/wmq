<?xml version="1.0" encoding="utf-8"?>

<!-- RoboMaster 2025 步兵3号(小步兵) -->
<robot name="rm_2025_INFANTRY_3"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="odom" />
  <link name="gimbal_link" />
  <link name="gun_link" />
  <link name="camera_link" />
  <link name="camera_optical_frame" />

  <!-- 电机 Pitch 轴的 Joint -->
  <joint name="gimbal_joint" type="floating">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="odom" />
    <child link="gimbal_link" />
  </joint>

  <!-- 枪管的 Joint -->
  <joint name="gun_joint" type="fixed">
    <origin xyz="0.189859 0 0" rpy="0 0 0" />
    <parent link="gimbal_link" />
    <child link="gun_link" />
  </joint>

  <!-- 摄像头的 Joint -->
  <joint name="camera_joint" type="fixed">
    <origin xyz="0.100000 -0.055983 0.040000" rpy="0 ${-4.2/180*pi} 0" />
    <parent link="gimbal_link" />
    <child link="camera_link" />
    <axis xyz="0 0 0" />
  </joint>

  <joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="camera_link" />
    <child link="camera_optical_frame" />
  </joint>

</robot>
